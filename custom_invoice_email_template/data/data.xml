<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- <data noupdate="1"> -->
    <data>
        <record id="email_template_edi_invoice_custom" model="mail.template">
            <field name="name">Invoice: Sending</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="email_from">{{ (object.invoice_user_id.email_formatted or user.email_formatted) }}</field>
            <field name="partner_to">{{ object.partner_id.id }}</field>
            <field name="subject">{{ object.company_id.name }} Invoice (Ref {{ object.name or 'n/a' }})</field>
            <field name="description">Sent to customers with their invoices in attachment</field>
            <field name="body_html" type="html">
                <!-- Email 157 -->
                <div style="padding-bottom:25px;width: 640px;height: auto;background-color: #E9E9E9 !important;border-radius: 37.6471px;">
                    <!-- Group 16088 -->
                    <div style="width: 593px;height: 110px;padding-left:23px !important;padding-top:23px !important;">
                        <!-- Frame 10268 -->
                        <div>
                            <img src="/custom_invoice_email_template/static/src/img/Header.png" style="width: 593px;height: 110px;"/>
                        </div>
                    </div>
                    <!-- Group 16087 -->
                    <div style="padding-bottom:50px;width: 592px;height:auto;margin-left:23px;background-color: #FFFFFF !important;border-radius: 0px 0px 30px 30px;">
                        <div style="width: 529px;height: 864.43px;padding-left:30px;padding-top: 40px;">
                            <div style="width:100%">
                                <table style="width:100%">
                                    <tr style="width:100%">
                                        <td style="width:49%;">
                                            <div>
                                                <img src="/custom_invoice_email_template/static/src/img/logo.png"/>
                                            </div>
                                        </td>
                                        <td style="width:49%;">
                                            <div style="text-align:right;font-family: 'Cera Pro';font-style: normal;font-weight: 500;font-size: 14.317px;line-height: 18px;text-align: right;color: #080D1D;">
                                                Total <span t-out="object.get_amount_str(object.amount_total)"/> COP <br/>
                                                <span t-out="object.get_invoice_date_print()"/>
                                            </div>
                                        </td>
                                    </tr>
                                </table>

                                <p style="margin-top: 30px;font-family: 'Mulish';font-style: normal;font-weight: 800;font-size: 23.1637px;line-height: 29px;">Hola, <t t-esc="object.partner_id.name.split(' ')[0]"/></p>
                                
                                <p style="margin-top: 30px;font-family: 'Cera Pro';font-style: normal;font-weight: 500;font-size: 16px;line-height: 20px;">Estimado <b style="font-weight: 800 !important;"><t t-out="object.partner_id.name"/></b>, Aquí está su factura <b style="font-weight: 800 !important;"><t t-out="object.name"/></b> por el importe de <b style="font-weight: 800 !important;"><t t-esc="object.get_amount_str(object.amount_total)"/> COP</b> de <b style="font-weight: 800 !important;">BEU CREATORS S.A.S.</b></p>
                                <p style="margin-top: 20px;font-family: 'Cera Pro';font-style: normal;font-weight: 500;font-size: 16px;line-height: 20px;">Siempre que realizas una venta te enviamos el recibo por la comisión de uso de la tecnología.</p>
                                
                                <h4 style="margin-top: 30px;font-family: 'Mulish';font-style: normal;font-weight: 800;font-size: 23.1637px;line-height: 29px;">Detalles del producto comprado</h4>

                                <ul style="margin-top: 15px;list-style-type: disc;margin-bottom: 50px;">
                                    <li style="font-family: 'Cera Pro';font-style: normal;font-size: 16px;line-height: 20px;"><b style="font-weight: 700;">Producto:</b> <t t-esc="object.get_product_names()"/></li>
                                    <li style="font-family: 'Cera Pro';font-style: normal;font-size: 16px;line-height: 20px;"><b style="font-weight: 700;">Productor:</b> <t t-esc="object.partner_id.name"/></li>
                                    <li style="font-family: 'Cera Pro';font-style: normal;font-size: 16px;line-height: 20px;"><b style="font-weight: 700;">Fecha de compra:</b> <span t-out="object.get_invoice_date_print()"/></li>
                                </ul>
                                
                                <table style="width:100%">
                                    <tr style="width:100%">
                                        <td style="width:49%;">
                                            <div style="text-align:left;font-family: 'Cera Pro';font-style: normal;font-size: 16px;line-height: 20px;">
                                                <b style="font-weight: 700;">Valor libre de impuesto</b>
                                            </div>
                                        </td>
                                        <td style="width:49%;">
                                            <div style="text-align:right;font-family: 'Cera Pro';font-style: normal;font-size: 16px;line-height: 20px;text-align: right;">
                                                <b style="font-weight: 500;"><span t-out="object.get_amount_str(object.amount_untaxed)"/> COP</b>
                                            </div>
                                        </td>
                                    </tr>
                                </table>

                                <hr style="font-weight: 700;margin-top:20px;margin-bottom:20px;width: 514px;height: 3px;background-color: #ddd9d9;"/>

                                <t t-if="object.tax_totals and object.tax_totals['groups_by_subtotal']" t-foreach="object.tax_totals['groups_by_subtotal']" t-as="amount_by_group">
                                    <t t-foreach="object.tax_totals['groups_by_subtotal'][amount_by_group]" t-as="item">
                                        <table style="width:100%">
                                            <tr style="width:100%">
                                                <td style="width:49%;">
                                                    <div style="margin-top:5px;text-align:left;font-family: 'Cera Pro';font-style: normal;font-size: 16px;line-height: 20px;">
                                                        <b style="font-weight: 700;"><t t-esc="item['tax_group_name']"/></b>
                                                    </div>
                                                </td>
                                                <td style="width:49%;">
                                                    <div style="margin-top:5px;text-align:right;font-family: 'Cera Pro';font-style: normal;font-size: 16px;line-height: 20px;text-align: right;">
                                                        <b style="font-weight: 500;"><t t-esc="object.get_amount_str(item['tax_group_amount'])"/> COP</b>
                                                    </div>
                                                </td>
                                            </tr>
                                        </table>
                                    </t>
                                </t>


                                <table style="width:100%">
                                    <tr style="width:100%">
                                        <td style="width:49%;">
                                            <div style="margin-top:25px;text-align:left;font-family: 'Cera Pro';font-style: normal;font-size: 28.1784px;line-height: 35px;">
                                                <b style="font-weight: 700;">Valor total</b>
                                            </div>
                                        </td>
                                        <td style="width:49%;">
                                            <div style="margin-top:25px;text-align:right;font-family: 'Cera Pro';font-style: normal;font-size: 28.1784px;line-height: 35px;text-align: right;color:#080D1D;">
                                                <b style="font-weight: 700;"><t t-esc="object.get_amount_str(object.amount_total)"/> COP</b>
                                            </div>
                                        </td>
                                    </tr>
                                </table>

                                <hr style="font-weight: 700;margin-top:20px;margin-bottom:20px;width: 514px;height: 2px;background-color: #01D5D8;"/>

                                <p style="margin-top:30px;font-family: 'Cera Pro';font-style: normal;font-weight: 500;font-size: 13px;line-height: 16px;text-decoration-line: underline;color: #276EF1;">Puede ver tus movimientos en tus transacciones</p>

                                <a target="_blank" t-att-href="object.get_invoice_url()" style="margin-top:50px;display: flex;flex-direction: column;justify-content: center;align-items: center;padding: 14.4797px 34.7513px;gap: 14.48px;width: 254.84px;height: 58.55px;left: calc(50% - 254.84px/2 - 129.58px);top: calc(50% - 58.55px/2 + 383.58px);background-color: #01D5D8;border-radius: 34.7513px;"><span style="font-family: 'Cera Pro';font-style: normal;font-weight: 700;font-size: 20.2716px;line-height: 29px;color: #080D1D;flex: none;order: 0;flex-grow: 0;">Descargar factura</span></a>

                                <p style="margin-top:50px;width: 513.5px;height: 22px;left: calc(50% - 513.5px/2 - 0.25px);bottom: 81.57px;font-family: 'Cera Pro';font-style: normal;font-weight: 400;font-size: 13px;line-height: 170%;color: #676767;">Esto no es un recibo de pago. es un resumen del movimiento realizado</p>
                            </div>
                        </div>
                    </div>
                    
                </div>
            </field>
            <field name="report_name">Invoice_{{ (object.name or '').replace('/','_') }}{{ object.state == 'draft' and '_draft' or '' }}</field>
            <field name="lang">{{ object.partner_id.lang }}</field>
            <field name="auto_delete" eval="True"/>
        </record>
    </data>
</odoo>